{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'form fos_user_profile_edit' } }) }}
    {{ form_widget(form.username, {'type': 'hidden'}) }}
    <div class="form-group">
        <label for="input-email">Email address</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'input-email'}}) }}
    </div>
    <div class="form-group">
    <label for="input-password">Current password</label>
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'id': 'inut-password'}}) }}
    </div>

    <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-default" />
{{ form_end(form) }}
