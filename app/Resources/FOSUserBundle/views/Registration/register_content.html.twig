{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'attr': {'class': 'form'}}) }}
    <div class="form-group">
        <label for="email">{{ 'E-mail address'|trans }}</label>
        {{ form_widget(form.email, {'attr': {'id': 'email', 'class': 'form-control'}}) }}
        {{ form_widget(form.username, {'attr': {'style': 'display: none', 'value': 'placeholder'}}) }}
    </div>
    <div class="form-group">
        <label for="password">{{ 'Password'|trans }}</label>
        {{ form_widget(form.plainPassword.first, {'attr': {'id': 'password', 'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        <label for="password2">{{ 'Repeat password'|trans }}</label>
        {{ form_widget(form.plainPassword.second, {'attr': {'id': 'password2', 'class': 'form-control'}}) }}
    </div>

    {{ form_widget(form._token) }}
    <input class="btn btn-default" type="submit" value="{{ 'Register'|trans }}" />
{{ form_end(form) }}
