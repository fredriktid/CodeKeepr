{% extends "FriggKeeprBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title -%}
	Login
{%- endblock title %}

{% block navbar_right %}
{% endblock %}

{% block body %}
	{% if error %}
	    <div>{{ error|trans }}</div>
	{% endif %}
	<div class="row-fluid">
		<form action="{{ path("fos_user_security_check") }}" method="post">
			<fieldset>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
		    	<div class="row-fluid">
		    		<input type="text" placeholder="Username or email" class="input-large" id="username" name="_username" value="{{ last_username }}" required="required" />
		    	</div>
		    	<div class="row-fluid">
		    		<input type="password" placeholder="Password" class="input-large" id="password" name="_password" required="required" />
		    	</div>
				<div class="row-fluid">
					<div class="pull-left">
		    			<input type="submit" class="btn" id="_submit" name="_submit" value="Login" />
		    		</div>
		    		<div class="pull-left remember_me">
					    <label for="remember_me">
					    	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
					    	<small>Remember</small>
					   </label>
					</div>
		    </fieldset>
		</form>
{% endblock body %}