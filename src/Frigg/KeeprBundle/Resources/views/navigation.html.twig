<li{% if currentRoute in ['home', 'post', 'post_show', 'post_date', 'post_user', 'post_delete_confirm', 'search'] %} class="active"{% endif %}>
	<a href="{{ path('home') }}">
		<i class="icon-list"></i>
		{{ 'Posts'|trans }}
	</a>
</li>
<li{% if currentRoute in ['tag', 'tag_show'] %} class="active"{% endif %}>
	<a href="{{ path('tag') }}">
		<i class="icon-tag"></i>
		{{ 'Tags'|trans }}
	</a>
</li>
<li class="divider"></li>
{% if is_granted('ROLE_USER') %}
    <li{% if currentRoute in ['post_new', 'post_edit'] %} class="active"{% endif %}>
    	<a href="{{ path('post_new') }}">
    		<i class="icon-plus"></i>
    		{{ 'Add post'|trans }}
    	</a>
   	</li>
    <li{% if currentRoute in ['user_post'] %} class="active"{% endif %}>
    	<a href="{{ path('user_post', {'id': app.user.id}) }}">
			<i class="icon-user"></i>
			{{ 'My posts'|trans }}
		</a>
	</li>
    <li{% if currentRoute in ['user_star'] %} class="active"{% endif %}>
    	<a href="{{ path('user_star', {'id': app.user.id}) }}">
    		<i class="icon-star"></i>
    		{{ 'Starred'|trans }}
    	</a>
   	</li>
{% else %}
    <li{% if currentRoute in ['fos_user_registration_register', 'fos_user_registration_check_email', 'fos_user_registration_confirm', 'fos_user_registration_confirmed'] %} class="active"{% endif %}>
    	<a href="{{ path('fos_user_registration_register') }}">
    		<i class="icon-user"></i>
    		{{ 'Join us in saving some code'|trans }}
    	</a>
    </li>
    <li{% if currentRoute in ['fos_user_security_login', 'fos_user_resetting_request', 'fos_user_resetting_send_email', 'fos_user_resetting_check_email', 'fos_user_resetting_reset'] %} class="active"{% endif %}>
    	<a href="{{ path('fos_user_security_login') }}">
    		<i class="icon-ok-sign"></i>
    		{{ 'Login to post to stuff'|trans }}
    	</a>
    </li>
{% endif %}
