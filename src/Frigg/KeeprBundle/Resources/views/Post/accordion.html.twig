{% if post %}
	<div class="accordion-group">
		<div class="accordion-heading">
			<div class="accordion-toggle pull-right post-tags">
				{% for tag in post.tags %}
					<a href="">
						<span class="label label-info">{{ tag.name }}</span>
					</a>
				{% endfor %}
			</div>

			<a class="inline-block accordion-language" href="">
				<span class="label label-inverse">{{ post.language.name }}</span>
			</a>

			<a class="inline-block accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#code-{{ post.id }}">
				{{ post.topic }}
			</a>
		</div>
		<div id="code-{{ post.id }}" class="accordion-body collapse{% if loop.first and expand_first is defined %} in{% endif %}">
			<div class="accordion-inner">
			<pre class="prettyprint"><code class="language-{{ post.language.identifier }}">{{ post.content|trim }}</code></pre>
			</div>
			<div class="accordion-credit pull-right">
				<span class="muted">{{ post.createdAt.format('Y-m-d') }} by <a href="">{{ post.user.username }}</a></span>
			</div>
		</div>
	</div>
{% endif %}
