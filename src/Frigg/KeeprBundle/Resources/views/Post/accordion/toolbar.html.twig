<div class="pull-right">
    <span class="muted"><small><a href="{{ path('post_date', {'date': post.createdAt.format('Y-m-d')}) }}">{{ post.createdAt.format('Y-m-d') }}</a> {{ 'by'|trans }} <a href="{{ path('user_posts', {'id': post.user.id}) }}">{{ post.user.username }}</a></small></span>
</div>

{% if not full_view %}
    <a href="{{ path('post_show', {'id': post.id, 'identifier': post.identifier}) }}" title="{{ 'Permanent link'|trans }}">
        <i class="icon-fullscreen"></i>
    </a>
{% endif %}

{% if is_granted('POST_DELETE', post) %}
    <a href="{{ path('post_delete_confirm', {'id': post.id}) }}" title="{{ 'Delete'|trans }}"><i class="icon-trash"></i></a>
{% endif %}

{% if is_granted('POST_EDIT', post) %}
    <a href="{{ path('post_edit', {'id': post.id}) }}" title="{{ 'Edit'|trans }}"><i class="icon-edit"></i></a>
{% endif %}
