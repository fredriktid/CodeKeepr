<ul class="nav nav-links nav-pills">
    <li{% if current_route in ['home', 'post', 'post_show', 'post_date'] %} class="active"{% endif %}><a href="{{ path('post') }}"><i class="icon-list"></i> {{ 'Posts'|trans }}</a></li>
    {% if is_granted('ROLE_USER') %}
        <li{% if current_route in ['post_new', 'post_edit'] %} class="active"{% endif %}><a href="{{ path('post_new') }}"><i class="icon-plus"></i> {{ 'Add post'|trans }}</a></li>
        <li{% if current_route in ['tag', 'tag_show'] %} class="active"{% endif %}><a href="{{ path('tag') }}"><i class="icon-tag"></i> {{ 'Tags'|trans }}</a></li>
        <li{% if current_route in ['user_post'] %} class="active"{% endif %}><a href="{{ path('user_post', {'id': app.user.id}) }}"><i class="icon-user"></i> {{ 'My posts'|trans }}</a></li>
        <li{% if current_route in ['user_star'] %} class="active"{% endif %}><a href="{{ path('user_star', {'id': app.user.id}) }}"><i class="icon-star"></i> {{ 'Starred'|trans }}</a></li>
    {% else %}
        <li{% if current_route in ['tag', 'tag_show'] %} class="active"{% endif %}><a href="{{ path('tag') }}"><i class="icon-tag"></i> {{ 'Tags'|trans }}</a></li>
        <li{% if current_route in ['fos_user_security_login', 'fos_user_resetting_request', 'fos_user_resetting_send_email', 'fos_user_resetting_check_email', 'fos_user_resetting_reset'] %} class="active"{% endif %}><a href="{{ path('fos_user_security_login') }}"><i class="icon-user"></i> {{ 'Login'|trans }}</a></li>
        <li{% if current_route in ['fos_user_registration_register', 'fos_user_registration_check_email', 'fos_user_registration_confirm', 'fos_user_registration_confirmed'] %} class="active"{% endif %}><a href="{{ path('fos_user_registration_register') }}"><i class="icon-ok-sign"></i> {{ 'Register'|trans }}</a></li>
    {% endif %}
</ul>
