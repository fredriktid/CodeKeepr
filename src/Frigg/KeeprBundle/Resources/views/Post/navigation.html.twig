        <li{% if current_route in ['fos_user_security_login', 'fos_user_resetting_request', 'fos_user_resetting_send_email', 'fos_user_resetting_check_email', 'fos_user_resetting_reset'] %} class="active"{% endif %}><a href="{{ path('fos_user_security_login') }}"><i class="icon-user"></i> Login</a></li>
