{% extends "FriggKeeprBundle::layout.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block body -%}
    {{ form_start(form) }}
    <div class="row-fluid">
        <div class="span12">
            <div class="inline-block">
                {{ form_widget(form.topic, {'attr': {'class': 'input-xlarge', 'placeholder': 'Type a descriptive title...'|trans}}) }}
            </div>
            <div class="inline-block">
                {{ form_widget(form.Language, {'attr': {'class': 'chosen margin-top-minus', 'data-placeholder': 'Choose syntax'|trans}}) }}
            </div>
            <div class="inline-block">

            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{ form_widget(form.content, {'attr': {'class': 'span12 code', 'placeholder': 'And paste in your code...'|trans}}) }}
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <ul class="tags pull-left" data-prototype="{{ form_widget(form.Tags.vars.prototype.name)|e }}">
                {% for tag in form.Tags %}
                    <li>{{ form_row(tag.name, {'attr': {'readonly': edit_tag}}) }}</li>
                {% endfor %}
            </ul>
            <ul class="inline pull-right">
            <li><label class="checkbox">{{ form_widget(form.private) }} {{ 'Private'|trans }}</label></li>
            <li>{{ form_widget(form.submit, {'attr': {'class': 'btn'}}) }}</li>
        </ul>
        </div>
    </div>
    {{ form_end(form) }}
    <div class="row-fluid">
        {% if delete_form is defined and delete_form is not empty %}
            <div class="span12">
                <hr>
                {{ form_start(delete_form) }}
                    {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}, 'label': 'Delete this post'|trans}) }}
                {{ form_end(delete_form) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href='http://fonts.googleapis.com/css?family=Source+Code+Pro' rel='stylesheet' type='text/css'>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/post.js') }}"></script>
{% endblock %}
