{% extends "FriggKeeprBundle::layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block body -%}
    {% if collection %}
        <div class="accordion" id="accordion2">
            {% for item in collection %}
                {{ include('FriggKeeprBundle:Post:accordion.html.twig', {'post': item, 'full': false}) }}
            {% endfor %}
        </div>
    {% else %}
        <p class="text-info">No posts yet</p>
    {% endif %}
{% endblock %}
