<!DOCTYPE html>
<html lang="en">
    <head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}{% endblock %} - CodeKeepr</title>
		<link href="{{ asset('bundles/friggkeepr/css/bootstrap.css') }}" rel="stylesheet" media="screen">
		<link href="{{ asset('bundles/friggkeepr/css/bootstrap-responsive.css') }}" rel="stylesheet" media="screen">
		<link href="http://fonts.googleapis.com/css?family=Lobster" rel="stylesheet" type="text/css">
		<link href="{{ asset('bundles/friggkeepr/css/app.css') }}" rel="stylesheet" media="screen">
		{% block stylesheets %}{% endblock %}
    </head>
    <body>
    	{% set currentRoute = app.request.attributes.get('_route') %}
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span2">
					<div class="nav-section">
						<h1 class="nav-logo">
							<a href="{{ path('codekeepr_home') }}">CodeKeepr</a>
						</h1>
					</div>
					<div class="sidebar-nav">
						{{ render(controller('FriggKeeprBundle:Tag:group', {'route': currentRoute})) }}
					</div>
				</div>
				<div class="span10">
					<div class="nav-section">
						<ul class="nav nav-pills">
							<li>
								<div class="input-append">
							  		<input style="width: 200px;" id="appendedInputButton" type="text">
							  		<button class="btn" type="button"><i class="icon-search"></i></button>
								</div>
							</li>
						</ul>
					</div>
					<div class="nav-section">
						<ul class="nav nav-pills">
						{% if is_granted('ROLE_USER') %}
							<li><a href="{{ path('post_new') }}"><i class="icon-plus"></i> Add code</a></li>
							<li><a href="#"><i class="icon-user"></i> My code</a></li>
							<li><a href="#"><i class="icon-share-alt"></i> Share page</a></li>
							<li><a href="{{ path('fos_user_security_logout') }}"><i class="icon-arrow-right"></i> Logout</a></li>
						{% else %}
							<li><a href="{{ path('fos_user_security_login') }}"><i class="icon-arrow-left"></i> Login</a></li>
							<li><a href="{{ path('fos_user_registration_register') }}"><i class="icon-edit"></i> Register</a></li>
						{% endif %}
						</ul>
					</div>
					{% block body %}{% endblock %}
				</div>
			</div>
		</div>
		<script src="http://code.jquery.com/jquery-1.10.0.min.js"></script>
		<script src="{{ asset('bundles/friggkeepr/js/bootstrap.js') }}"></script>
		<script src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js?skin=desert"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>
