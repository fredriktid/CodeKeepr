{% extends "FriggKeeprBundle::layout.html.twig" %}

{% block title %}{{ 'Stats'|trans }}{% endblock %}


{% block body %}
    <div class="col-sm-12 col-md-6">
        <h3>
            Popular tags
        </h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="width: 10%">#</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in popular_tags %}
                    <tr>
                        <td><a href="{{ path('search_index', {'nested': ['Tags.name:' ~ tag.identifier]}) }}">{{ tag.post_count }}</a></td>
                        <td><a href="{{ path('search_index', {'nested': ['Tags.name:' ~ tag.identifier]}) }}">{{ tag.name }}</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="col-sm-12 col-md-6">
        <h3>
            Active users
        </h3>
        <table class="table table-hover">
            <thead>
            <tr>
                <th style="width: 10%">Posts</th>
                <th>Username</th>
            </tr>
            </thead>
            <tbody>
            {% for user in active_users %}
                <tr>
                    <td><a href="{{ path('search_index', {'objects': ['User.id:' ~ user.id]}) }}">{{ user.post_count }}</a></td>
                    <td><a href="{{ path('search_index', {'objects': ['User.id:' ~ user.id]}) }}">{{ user.email|generate_username }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
